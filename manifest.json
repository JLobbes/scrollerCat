{
    "comment": "// This was my original draft manifest.json. It's being scrapped and salvaged for the one in /scrollerCatExtentions",
    "manifest_version": 3,
    "name": "ScrollerCat",
    "version": "1.0",
    "description": "A browser extension reading tool using OCR.",
    "permissions": ["activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"], 
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "scrollerOverlay.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["images/button-icons", "libs/tesseract-core.wasm"],
        "matches": ["<all_urls>"]
      }
    ]
}
  